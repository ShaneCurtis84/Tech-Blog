{{#each posts as |post|}}

    <div>
      <h2>
        <a href="/post/{{post.id}}">{{post.title}}</a>
      
      </h2>
      <p>Created by
        {{user.username}}
        on
        {{format_date date_created}}</p>
    </div>
    <div>
      <p>
        {{post.content}}
      </p>
    </div>
  </div>
{{/each}}